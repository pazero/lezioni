print("Ciao!")
print("Inserisci l'user:")
user = input("")
print()
print("Inserisci la password:")
password = input("")
while user != "pincopallino" and password != "vivalapizza":
	print()
	print("L'USER E LA PASSWORD NON SONO CORRETTI!")
	print()
	user = input("Inserisci nuovamente l'user:")
	print()
	password = input("Inserisci nuovamente la password:")

print()
print("L'user e la password sono giusti...")
input("PREMI INVIO PER TERMINARE")
print()
print("ENDPROCEDURE")
